<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectWhatsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!--Colors primary-->
        <item name="colorPrimary">#075E54</item>
        <item name="colorPrimaryDark">#128C7E</item>
        <item name="colorAccent">#25D366</item>

        <!-- Colors of text and backgrounds -->
        <item name="android:colorBackground">#121212</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#B0B0B0</item>

        <!-- StatusBar e NavigationBar -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>

        <!-- styles of buttons -->
        <item name="buttonStyle">@style/Widget.Button.Dark</item>




         <item name="actionOverflowButtonStyle">@style/ActionOverFlowButton</item>

    </style>

    <style name="Widget.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#25D366</item> <!-- Verde estilo WhatsApp -->
    </style>

    <style name="ActionOverFlowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>
</resources>